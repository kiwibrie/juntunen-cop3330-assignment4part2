                            <font>
                                <Font size="14.0" />
                            </font>
                            <VBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </VBox.margin>
                        </Label>
                        <TextArea fx:id="ItemDescField" prefHeight="100.0" promptText="max. 256 characters..." wrapText="true">
                            <VBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" />
                            </VBox.margin>
                        </TextArea>
                        <Label text="Due Date">
                            <VBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </VBox.margin>
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <DatePicker fx:id="DueDateSelector" promptText="Select Date...">
                            <VBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" />
                            </VBox.margin>
                        </DatePicker>
                        <Label text="Completed">
                            <font>
                                <Font size="14.0" />
                            </font>
                            <VBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </VBox.margin>
                        </Label>
                        <CheckBox fx:id="CompletedButton" mnemonicParsing="false">
                            <VBox.margin>
                                <Insets bottom="5.0" left="10.0" right="5.0" />
                            </VBox.margin>
                        </CheckBox>
                        <Button fx:id="AddItemButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#AddItemButtonClicked" prefHeight="0.0" prefWidth="227.0" text="Add Item">
                            <VBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="295.0" />
                            </VBox.margin>
                            <opaqueInsets>
                                <Insets />
                            </opaqueInsets>
                        </Button>
                    </VBox>
                </AnchorPane>
            </SplitPane>
        </AnchorPane>
    </VBox>
</AnchorPane>
