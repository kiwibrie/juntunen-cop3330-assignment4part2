            <Menu mnemonicParsing="false" text="Edit">
                <MenuItem fx:id="SaveList" mnemonicParsing="false" onAction="#SaveListClicked" text="Save List..." />
                <MenuItem fx:id="LoadList" mnemonicParsing="false" onAction="#LoadListClicked" text="Load List..." />
                <MenuItem fx:id="DeleteList" mnemonicParsing="false" onAction="#DeleteListClicked" text="Delete List..." />
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
                <MenuItem fx:id="About" mnemonicParsing="false" onAction="#AboutClicked" text="About" />
