                        <contextMenu>
                            <ContextMenu>
                                <items>
                                    <CheckMenuItem fx:id="CompletedToggle" mnemonicParsing="false" onAction="#ToggleCompletedClicked" text="Toggle Completed" />
                                    <MenuItem fx:id="EditItem" mnemonicParsing="false" onAction="#EditItemClicked" text="Edit Item" />
                                    <MenuItem fx:id="DeleteItem" mnemonicParsing="false" onAction="#DeleteItemClicked" text="Delete Item" />
