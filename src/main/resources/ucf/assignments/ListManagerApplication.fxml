                <MenuItem fx:id="CloseApp" mnemonicParsing="false" onAction="#CloseAppClicked" text="Close" />
            </Menu>
            <Menu mnemonicParsing="false" text="Edit">
                <MenuItem fx:id="ClearList" mnemonicParsing="false" onAction="#ClearListClicked" text="Clear List" />
            </Menu>
         <Menu mnemonicParsing="false" text="View">
           <items>
               <CheckMenuItem fx:id="AllItemsMenuItem" mnemonicParsing="false" onAction="#ShowAllItemsClicked" selected="true" text="Show All Items" />
               <CheckMenuItem fx:id="OnlyCompletedMenuItem" mnemonicParsing="false" onAction="#OnlyCompleteClicked" text="Show Only Complete" />
               <CheckMenuItem fx:id="OnlyIncompletedMenuItem" mnemonicParsing="false" onAction="#OnlyIncompletedClicked" text="Show Only Incomplete" />
