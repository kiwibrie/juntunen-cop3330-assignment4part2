                               prefWidth="529.0" textAlignment="CENTER">
                            <font>
                                <Font size="18.0"/>
                            </font>
                            <padding>
                                <Insets left="80.0"/>
                            </padding>
                            <HBox.margin>
                                <Insets top="5.0"/>
                            </HBox.margin>
                        </Label>
                        <MenuButton mnemonicParsing="false" text="Edit...">
                            <items>
                                <MenuItem fx:id="NewItem" mnemonicParsing="false" onAction="#NewItemClicked"
                                          text="New Item"/>
                                <CheckMenuItem fx:id="SortAlphabetical" mnemonicParsing="false"
                                               onAction="#SortAlphaClicked" text="Sort by Alphabetical"/>
